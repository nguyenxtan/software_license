# Database
DATABASE_URL="postgresql://user:password@localhost:5432/software_license?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Hệ thống quản lý bản quyền <noreply@yourcompany.com>"

# Notification Settings
DEFAULT_REMINDER_DAYS=90,60,30,7,1
ENABLE_AUTO_NOTIFICATIONS=true

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Authentication
# Set to 'keycloak' to enable SSO (future feature)
AUTH_PROVIDER=local

# Keycloak Configuration (for future use)
KEYCLOAK_URL=
KEYCLOAK_REALM=
KEYCLOAK_CLIENT_ID=
KEYCLOAK_CLIENT_SECRET=
